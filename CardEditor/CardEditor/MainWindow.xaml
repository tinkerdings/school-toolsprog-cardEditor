<Window x:Class="CardEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardEditor"
        xmlns:views="clr-namespace:CardEditor.Views" 
        xmlns:viewmodels="clr-namespace:CardEditor.ViewModels" 
        mc:Ignorable="d"
        Title="Diablo Card Editor"
        MinHeight="945" 
        MinWidth="1000"
        MaxHeight="945" 
        MaxWidth="1000"
        FontFamily="{StaticResource Exocet}">
    <Grid
        Style="{StaticResource StyleBackgroundPrimary}">
        <views:MainView DataContext="{Binding MainViewModel, Source={StaticResource ViewModelLocator}}"/>
    </Grid>
</Window>
