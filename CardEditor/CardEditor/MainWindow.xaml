<Window x:Class="CardEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardEditor"
        xmlns:views="clr-namespace:CardEditor.Views" 
        xmlns:viewmodels="clr-namespace:CardEditor.ViewModels" 
        mc:Ignorable="d"
        Title="Diablo Card Editor"
        MinHeight="945" 
        MinWidth="1200"
        FontFamily="{StaticResource Exocet}">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewmodels:EditViewModel}">
            <views:EditView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:BrowseViewModel}">
            <views:BrowseView />
        </DataTemplate>
    </Window.Resources>
    <Grid
        Style="{StaticResource StyleBackgroundPrimary}">
        <views:MainView/>
    </Grid>
</Window>
