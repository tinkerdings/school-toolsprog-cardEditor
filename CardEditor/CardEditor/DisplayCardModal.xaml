<Window x:Class="CardEditor.DisplayCardModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CardEditor" xmlns:views="clr-namespace:CardEditor.Views"
        mc:Ignorable="d"
        Title="DisplayCardModal" Height="450" Width="800"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        MinHeight="760" 
        MinWidth="500"
        MaxHeight="760" 
        MaxWidth="500"
        FontFamily="{StaticResource Exocet}">
    <Border
        Margin="0"
        Style="{StaticResource StyleBorderItemGold}">
        <Grid
            Style="{StaticResource StyleBackgroundPrimary}">
            <views:DisplayCardView/>
        </Grid>
    </Border>
</Window>
